[mysqld]
# Enable large prefix to allow larger index key lengths
innodb_file_per_table = 1

# Optional: Set InnoDB file format to Barracuda for better compatibility
innodb_default_row_format = dynamic

# Set the default character set to utf8mb4
character-set-server = utf8mb4

# Set the default collation (optional, but recommended with utf8mb4)
collation-server = utf8mb4_general_ci

# Optional: If you want client connections to use the same character set
[client]
default-character-set = utf8mb4
